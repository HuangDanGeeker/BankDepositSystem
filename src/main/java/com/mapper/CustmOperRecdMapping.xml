<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.ICustmOperRecdDAO">
    <resultMap id="CustmOperRecord" type="com.bean.CustmOperRecord">
        <result column="no" property="no" jdbcType="VARCHAR"/>
        <result column="operType" property="operType" jdbcType="INT"/>
        <result column="dealerNo" property="dealerNo" jdbcType="VARCHAR"/>
        <result column="dealerName" property="dealerName" jdbcType="VARCHAR"/>
        <result column="nums" property="nums" jdbcType="INT"/>
        <result column="operDate" property="operDate" jdbcType="date"/>
    </resultMap>

    <!--查询记录-->
    <select id="queryRecord" parameterType="java.lang.String" resultMap="CustmOperRecord">
        SELECT * FROM recd_custm_${no}
    </select>
    <select id="queryRecordByType" parameterType="java.lang.String, java.lang.Integer" resultMap="CustmOperRecord">
        SELECT * FROM recd_custm_${no} where operType=#{operType}
    </select>
    <select id="queryRecordByDate" parameterType="java.lang.String, java.sql.Date, java.sql.Date" resultMap="CustmOperRecord">
        SELECT * FROM recd_custm_${no} where operType=#{operType} and operDate <= #{endDate} and operDate >= #{startDate}
    </select>
    <select id="queryRecordByBoth" parameterType="java.lang.String, java.lang.Integer, java.sql.Date, java.sql.Date" resultMap="CustmOperRecord">
        SELECT * FROM recd_custm_${no} where operType=#{operType} and operDate <= #{endDate} and operDate >= #{startDate}
    </select>

    <!--插入记录-->
    <insert id="insertRecord" parameterMap="com.bean.CustmOperRecord">
        INSERT  INTO recd_custm_${record.no} VALUES(#{record.no}, #{record.operType}, #{record.dealerNo}, #{record.dealerName}, #{nums}, #{operDate})
    </insert>
</mapper>